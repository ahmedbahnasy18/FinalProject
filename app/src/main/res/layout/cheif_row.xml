<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_width="match_parent">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/img_chief"
            android:src="@drawable/blank_chief"
            android:layout_width="80dp"
            android:scaleType="centerCrop"
            android:layout_marginEnd="15dp"
            android:layout_gravity="center_vertical"
            android:layout_height="match_parent" />

        <TextView
            android:text="cheifname"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_toEndOf="@+id/img_chief"
            android:layout_toStartOf="@+id/rating_bar"
            android:layout_above="@+id/deliverin"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="15dp"
            android:id="@+id/cheifname"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lbl_delivers_in"
            android:text="@string/delivers_in"
            android:layout_toEndOf="@+id/img_chief"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />

        <TextView
            android:text="30 Minutes"
            android:textStyle="bold"
            android:layout_toEndOf="@+id/lbl_delivers_in"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/deliverin" />

        <RatingBar
            android:id="@+id/rating_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stepSize="1"
            android:numStars="5"
            style="@style/Base.Widget.AppCompat.RatingBar.Small"
            android:isIndicator="true"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>