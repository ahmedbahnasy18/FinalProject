<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_width="match_parent">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="12dp">

        <ImageView
            android:id="@+id/img_chief"
            android:src="@android:color/darker_gray"
            android:layout_width="80dp"
            android:layout_marginEnd="15dp"
            android:layout_height="match_parent" />

        <TextView
            android:text="cheifname"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_toEndOf="@+id/img_chief"
            android:layout_marginBottom="15dp"
            android:id="@+id/cheifname"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lbl_delivers_in"
            android:text="Delivers in "
            android:layout_toEndOf="@+id/img_chief"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />

        <TextView
            android:text="30 Minutes"
            android:textStyle="bold"
            android:layout_toEndOf="@+id/lbl_delivers_in"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/deliverin" />
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            android:orientation="horizontal">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    app:srcCompat="@android:drawable/btn_star_big_off"
                    android:id="@+id/star1" />
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    app:srcCompat="@android:drawable/btn_star_big_off"
                    android:id="@+id/star2" />
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    app:srcCompat="@android:drawable/btn_star_big_off"
                    android:id="@+id/star3" />
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    app:srcCompat="@android:drawable/btn_star_big_off"
                    android:id="@+id/star4" />
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    app:srcCompat="@android:drawable/btn_star_big_off"
                    android:id="@+id/star5" />
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>